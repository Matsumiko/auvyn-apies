# AUVYN APIES CONFIGURATION

# Port local untuk service ini
PORT=5882

# URL IP Center tanpa path /trx (contoh)
CENTER_URL=http://127.0.0.1:6969

# Kredensial agen
MEMBER_ID=AG000001
PIN=0000
PASSWORD=MyStrongPassword123

# Prefix untuk string signature, disediakan oleh penyedia IP center
SIGN_PREFIX=ENGINE

# Secret untuk proteksi endpoint /api/*
AUVYN_SECRET=change-me-auvyn-secret

# (Opsional) URL callback ke backend/worker
CALLBACK_URL=https://example.com/auvyn/callback
CALLBACK_SECRET=change-me-callback-secret

# Folder log (default: ./logs)
LOGS_DIR=./logs

# Batas saldo rendah (dalam Rupiah, contoh 50000 = 50k)
BALANCE_LOW_LIMIT=50000

# Telegram bots (opsional, boleh dikosongkan)
TG_SUCCESS_BOT_TOKEN=
TG_SUCCESS_CHAT_ID=

TG_PENDING_BOT_TOKEN=
TG_PENDING_CHAT_ID=

TG_FAILED_BOT_TOKEN=
TG_FAILED_CHAT_ID=

TG_SYSTEM_BOT_TOKEN=
TG_SYSTEM_CHAT_ID=
